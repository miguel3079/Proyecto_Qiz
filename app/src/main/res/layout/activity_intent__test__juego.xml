<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="natour.issam.proyecto.es.proyecto_qiz.Intent_Test_Juego"
    android:background="@drawable/fondologin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/game"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:id="@+id/imagenmipregunta"
        android:layout_alignParentTop="true"

        android:background="@drawable/fondo_img"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="180dp"
        />

    <Button
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton1"
        android:background="@drawable/fondo_habilidad"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="210dp"
        />
    <Button
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/botonfiftyfifty"
        android:background="@drawable/fondo_habilidad"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="160dp"
        android:focusable="false"
        android:text="50%"
        android:textSize="8dp" />
    <Button
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/botonconejo"
        android:background="@drawable/fondo_habilidad"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="110dp"
        android:focusableInTouchMode="false"
        android:textSize="8dp"
        android:text="Consejo" />
    <Button
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonsumartiempo"
        android:background="@drawable/fondo_habilidad"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"
        android:focusableInTouchMode="false"
        android:text="+Tiempo"
        android:textSize="8dp" />

    <Button
        android:layout_alignParentTop="true"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/botonpreguntaC"
        android:background="@drawable/efct"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="20dp"
        android:onClick="ComprobarC" />
    <Button
        android:layout_alignParentTop="true"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/botonpreguntaD"
        android:background="@drawable/efct"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="150dp"
        android:nestedScrollingEnabled="false"
        android:onClick="ComprobarD" />

    <Button
        android:layout_alignParentTop="true"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/botonpreguntaAA"
        android:background="@drawable/efct"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:onClick="ComprobarA"
        android:nestedScrollingEnabled="false" />
    <Button
        android:layout_alignParentTop="true"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/botonpreguntaB"
        android:background="@drawable/efct"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:onClick="ComprobarB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoPregunta12345"
        android:layout_marginTop="100dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoconsejo"
        android:layout_below="@+id/botonpreguntaC"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textocantidaddetiempo"
        android:layout_below="@+id/textocantidaddeconsejos"
        android:layout_alignLeft="@+id/botonpreguntaAA"
        android:layout_alignStart="@+id/botonpreguntaAA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textocantidaddeconsejos"
        android:layout_alignTop="@+id/botonfiftyfifty"
        android:layout_toRightOf="@+id/buttonsumartiempo"
        android:layout_toLeftOf="@+id/textoconsejo"
        android:layout_toStartOf="@+id/textoconsejo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textocantidaddefiftyfifty"
        android:layout_alignTop="@+id/botonfiftyfifty"
        android:layout_toRightOf="@+id/botonconejo"
        android:layout_alignRight="@+id/botonfiftyfifty"
        android:layout_alignEnd="@+id/botonfiftyfifty" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/textocantidaddetiempo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>
</RelativeLayout>
