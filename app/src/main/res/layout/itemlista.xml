<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/panel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/foto">

            <com.parse.ParseImageView android:id="@+id/foto" android:layout_width="80dp" android:layout_height="80dp" android:adjustViewBounds="true"  android:cropToPadding="true" android:scaleType="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/texttop"
                android:textSize="24sp"
                android:layout_above="@+id/imageView2"
                android:layout_toRightOf="@+id/nombre"
                android:layout_toEndOf="@+id/nombre" />

            <TextView android:id="@+id/puntos" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/foto"
                android:layout_toEndOf="@+id/foto" />

            <TextView android:id="@+id/nombre" android:layout_width="180dp" android:layout_height="wrap_content"
                android:text="Large Text" android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignTop="@+id/foto"
                android:layout_toRightOf="@+id/foto"
                android:singleLine="true"
                android:maxWidth="180dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:background="@drawable/monedas"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:background="@drawable/diamantes"
                android:layout_below="@+id/puntos"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="9dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>