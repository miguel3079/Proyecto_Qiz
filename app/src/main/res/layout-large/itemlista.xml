<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" >
    <com.parse.ParseImageView android:id="@+id/foto" android:layout_width="100dp" android:layout_height="100dp" android:adjustViewBounds="true"  android:cropToPadding="true" android:scaleType="center"/>
    <TextView android:id="@+id/nombre" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/puntos" android:layout_marginBottom="14dp" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/foto" android:text="Large Text" android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView android:id="@+id/puntos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/foto" android:layout_alignLeft="@+id/nombre" android:layout_alignRight="@+id/nombre" android:layout_marginBottom="14dp" android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texttop"
        android:layout_alignBottom="@+id/nombre"
        android:layout_alignRight="@+id/nombre"
        android:layout_alignEnd="@+id/nombre"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />
</RelativeLayout>